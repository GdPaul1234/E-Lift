<DialogPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/16"
            fx:controller="main.controller.ImmeubleEditDialogController">
    <buttonTypes>
        <ButtonType fx:constant="CANCEL"/>
        <ButtonType fx:constant="OK"/>
    </buttonTypes>

    <stylesheets>
        <URL value="@../style.css"/>
    </stylesheets>

    <header>
        <HBox alignment="CENTER" prefWidth="400.0" spacing="10.0" styleClass="hero-header">
            <ImageView fitHeight="25.0" fitWidth="30.0">
                <Image url="@../../resource/imeuble.png"/>
            </ImageView>

            <Label text="Edition immeuble"/>
            <padding>
                <Insets bottom="10.0" top="10.0"/>
            </padding>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </HBox>
    </header>

    <content>
        <GridPane hgap="10.0" vgap="5.0">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="50.0"/>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="40.0" minWidth="10.0"
                                   prefWidth="40.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>

            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>

            <padding>
                <Insets left="20.0" right="20.0" top="10.0"/>
            </padding>


            <children>
                <Label text="Nom"/>
                <TextField fx:id="nomTextField" promptText="RÃ©sidence des Lilas" GridPane.columnIndex="1"
                           GridPane.columnSpan="2147483647"/>

                <Label text="Etage" GridPane.rowIndex="1"/>
                <Spinner fx:id="etageSpinner" editable="true" prefHeight="27.0" prefWidth="204.0"
                         GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1">
                    <valueFactory>
                        <SpinnerValueFactory.IntegerSpinnerValueFactory max="100" min="1"/>
                    </valueFactory>
                </Spinner>

                <Label text="Rue" GridPane.rowIndex="3"/>
                <TextField fx:id="rueTextField" promptText="8, rue de la Paix" GridPane.columnIndex="1"
                           GridPane.columnSpan="2147483647" GridPane.rowIndex="3"/>

                <Separator prefWidth="200.0" GridPane.columnSpan="2147483647" GridPane.rowIndex="2"/>

                <Label text="Code Postal" GridPane.rowIndex="4"/>
                <TextField fx:id="codePostalTextField" promptText="75001" GridPane.columnIndex="1"
                               GridPane.rowIndex="4"/>
                <Label text="Ville" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
                <TextField fx:id="villeTextField" promptText="Paris" GridPane.columnIndex="3" GridPane.rowIndex="4"/>

            </children>

        </GridPane>
    </content>
</DialogPane>
