<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controller.MainController">
   <stylesheets>
      <URL value="@style.css" />
   </stylesheets>

    <top>
       <VBox>
          <HBox fx:id="topbar" alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
             <ImageView fitHeight="60.0" fitWidth="152.0" preserveRatio="true">
                <Image url="@../resource/E-lift1.png" />
             </ImageView>

             <MenuButton text="Gestion clients" textOverrun="CLIP">
                <graphic>
                   <ImageView fitHeight="30.0" fitWidth="30.0">
                      <Image url="@../resource/silhouette-d'utilisateurs-multiples.png" />
                   </ImageView>
                </graphic>
                <items>
                   <MenuItem onAction="#handleAddAscensoriste" text="Ajouter client">
                      <graphic>
                         <ImageView fitHeight="30.0" fitWidth="30.0">
                            <Image url="@../resource/ajouter-le-fichier.png" />
                         </ImageView>
                      </graphic>
                   </MenuItem>

                   <MenuItem text="Modifier client">
                      <graphic>
                         <ImageView fitHeight="18.0" fitWidth="18.0">
                            <Image url="@../resource/updated.png" />
                         </ImageView>
                      </graphic>
                   </MenuItem>
                </items>
             </MenuButton>
             <MenuButton text="Gestion immeubles" textOverrun="CLIP">
                <graphic>
                   <ImageView fitHeight="25.0" fitWidth="30.0">
                      <Image url="@../resource/imeuble.png" />
                   </ImageView>
                </graphic>
                <items>
                   <MenuItem text="Ajouter immeuble">
                      <graphic>
                         <ImageView fitHeight="20.0" fitWidth="20.0">
                            <Image url="@../resource/ajouter-le-fichier.png" />
                         </ImageView>
                      </graphic>
                   </MenuItem>
                   <MenuItem text="Modifier immeuble">
                      <graphic>
                         <ImageView fitHeight="18.0" fitWidth="18.0">
                            <Image url="@../resource/updated.png" />
                         </ImageView>
                      </graphic>
                   </MenuItem>
                </items>
             </MenuButton>

             <MenuButton text="Gestion acsenseurs" textOverrun="CLIP">
                <graphic>
                   <ImageView fitHeight="25.0" fitWidth="30.0">
                      <Image url="@../resource/ascenseur-d'urgence.png" />
                   </ImageView>
                </graphic>
                <items>
                   <MenuItem text="Ajouter ascenseur">
                      <graphic>
                         <ImageView fitHeight="20.0" fitWidth="20.0">
                            <Image url="@../resource/ajouter-le-fichier.png" />
                         </ImageView>
                      </graphic>
                   </MenuItem>
                   <MenuItem text="Modifier ascenseur">
                      <graphic>
                         <ImageView fitHeight="18.0" fitWidth="18.0">
                            <Image url="@../resource/updated.png" />
                         </ImageView>
                      </graphic>
                   </MenuItem>
                </items>
             </MenuButton>
             <MenuButton text="Gestion employés" textOverrun="CLIP">
                <graphic>
                   <ImageView fitHeight="30.0" fitWidth="35.0">
                      <Image url="@../resource/employe.png" />
                   </ImageView>
                </graphic>
                <items>
                   <MenuItem text="Ajouter employé">
                      <graphic>
                         <ImageView fitHeight="20.0" fitWidth="20.0">
                            <Image url="@../resource/ajouter-le-fichier.png" />
                         </ImageView>
                      </graphic>
                   </MenuItem>
                   <MenuItem text="Modifier employé">
                      <graphic>
                         <ImageView fitHeight="18.0" fitWidth="18.0">
                            <Image url="@../resource/updated.png" />
                         </ImageView>
                      </graphic>
                   </MenuItem>
                </items>
             </MenuButton>

            <padding>
               <Insets right="20.0" />
            </padding>
          </HBox>

         <HBox style="-fx-background-color: derive(lightgray, 20%)">
            <padding>
               <Insets bottom="5.0" />
            </padding>
         </HBox>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
       </VBox>

    </top>

   <center>
      <AnchorPane fx:id="main" layoutY="89.0">
         <children>
            <Label layoutX="33.0" layoutY="14.0" style="-fx-font-size: 2em;" text="Gestion des pannes" />
            <Label layoutX="33.0" layoutY="48.0" style="-fx-font-size:  1.25em" text="En temps réel" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>
