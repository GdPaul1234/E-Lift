<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="480.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/11.0.1" fx:controller="main.controller.ImmeubleOverviewController">
    <stylesheets>
        <URL value="@../style.css"/>
    </stylesheets>

    <top>
        <HBox alignment="CENTER" spacing="10.0" styleClass="hero-header">
            <ImageView fitHeight="25.0" fitWidth="30.0">
                <Image url="@../../resource/imeuble.png"/>
            </ImageView>

            <Label text="Gestion immeubles et ascenseurs"/>

            <padding>
                <Insets bottom="10.0" top="10.0"/>
            </padding>
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.2857142857142857, 0.7167919799498746">
            <TableView fx:id="immeubleTable" prefHeight="200.0" prefWidth="200.0">
                <columns>
                    <TableColumn fx:id="nomColumn" prefWidth="125.0" text="nom"/>
                    <TableColumn fx:id="villeColumn" prefWidth="100.0" text="ville"/>
                </columns>
            </TableView>

            <SplitPane dividerPositions="0.5" orientation="VERTICAL">
                <TableView fx:id="ascenseurTable">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="60.0" text="ID"/>
                        <TableColumn fx:id="modeleColumn" prefWidth="125.0" text="modèle"/>
                        <TableColumn fx:id="etatColumn" prefWidth="75.0" text="état"/>
                        <TableColumn fx:id="miseServiceColumn" prefWidth="75.0" text="mise en service"/>
                    </columns>
                </TableView>

                <BorderPane>
                    <center>
                        <GridPane hgap="5.0" styleClass="info-pane" vgap="7.0">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>

                            <columnConstraints>
                                <ColumnConstraints/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="75.0"/>
                                <ColumnConstraints/>
                                <ColumnConstraints/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                            </rowConstraints>

                            <Label styleClass="title" text="Détails immeuble :" GridPane.columnSpan="2147483647"/>

                            <Label text="Nom" GridPane.rowIndex="2"/>
                            <TextField fx:id="nomTextField" editable="false" GridPane.columnIndex="1"
                                       GridPane.columnSpan="2147483647" GridPane.rowIndex="2"/>

                            <Label text="Etage" GridPane.rowIndex="3"/>
                            <TextField fx:id="etageTextField" editable="false" GridPane.columnIndex="1"
                                       GridPane.columnSpan="2147483647" GridPane.rowIndex="3"/>


                            <Label text="Adresse" GridPane.rowIndex="4"/>
                            <TextField fx:id="adresseTextField" GridPane.columnIndex="1"
                                       GridPane.columnSpan="2147483647" GridPane.rowIndex="4"/>

                        </GridPane>
                    </center>

                    <bottom>
                        <ButtonBar buttonMinWidth="55.0">
                            <buttons>
                                <Button  text="Ajouter" onAction="#handleAddImmeuble" ButtonBar.buttonData="LEFT"/>
                                <Button  text="Editer" onAction="#handleEditImmeuble" ButtonBar.buttonData="RIGHT"/>
                                <Button  text="Supprimer" onAction="#handleDeleteImmeuble" ButtonBar.buttonData="RIGHT"/>
                            </buttons>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </ButtonBar>
                    </bottom>
                </BorderPane>
            </SplitPane>

            <BorderPane>
                <center>
                    <GridPane hgap="5.0" styleClass="info-pane" vgap="7.0">
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </padding>

                        <columnConstraints>
                            <ColumnConstraints prefWidth="60.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="75.0"/>
                            <ColumnConstraints/>
                            <ColumnConstraints/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints/>
                            <RowConstraints/>
                            <RowConstraints/>
                            <RowConstraints/>
                            <RowConstraints/>
                            <RowConstraints/>
                            <RowConstraints/>
                            <RowConstraints/>
                            <RowConstraints/>
                            <RowConstraints/>
                        </rowConstraints>

                        <Label styleClass="title" text="Détails ascenseur :" GridPane.columnSpan="2147483647"/>

                        <Label text="ID" GridPane.rowIndex="2"/>
                        <TextField fx:id="idAscenseurTextField" editable="false" GridPane.columnIndex="1"
                                   GridPane.columnSpan="2147483647" GridPane.rowIndex="2"/>

                        <Label text="Marque" GridPane.rowIndex="3"/>
                        <TextField fx:id="marqueTextField" editable="false" GridPane.columnIndex="1"
                                   GridPane.columnSpan="2147483647" GridPane.rowIndex="3"/>

                        <Label text="Modèle" GridPane.rowIndex="4"/>
                        <TextField fx:id="modeleTextField" GridPane.columnIndex="1" GridPane.columnSpan="2147483647"
                                   GridPane.rowIndex="4"/>

                        <Label text="Etat" GridPane.rowIndex="6"/>
                        <TextField fx:id="etatTextField" GridPane.columnIndex="1" GridPane.columnSpan="2147483647"
                                   GridPane.rowIndex="6"/>

                        <Label text="Mise en service" GridPane.rowIndex="7"/>
                        <TextField fx:id="miseServiceTextField" GridPane.columnIndex="1"
                                   GridPane.columnSpan="2147483647" GridPane.rowIndex="7"/>

                        <Label text="Etage" GridPane.rowIndex="9"/>
                        <TextField fx:id="etageAscenseurTextField" GridPane.columnIndex="1"
                                   GridPane.columnSpan="2147483647" GridPane.rowIndex="9"/>

                    </GridPane>
                </center>

                <bottom>
                    <ButtonBar buttonMinWidth="55.0">
                        <buttons>
                            <Button maxWidth="-Infinity" text="Ajout."
                                    ButtonBar.buttonData="LEFT"/>
                            <Button text="Edit." ButtonBar.buttonData="OTHER"/>
                            <Button text="Suppr." ButtonBar.buttonData="OTHER"/>
                        </buttons>
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </padding>
                    </ButtonBar>
                </bottom>
            </BorderPane>

        </SplitPane>
    </center>
</BorderPane>
